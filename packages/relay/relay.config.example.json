{
  "discord": {
    "token": "your-discord-bot-token (or set DISCORD_TOKEN env var)",
    "allowedChannels": ["channel-id-1", "channel-id-2"]
  },
  "sandbox": {
    "pluginUrl": "http://sprite-host:7600",
    "healthPath": "/relay/health",
    "wsPath": "/relay/ws",
    "authToken": "shared-secret (or set SANDBOX_AUTH_TOKEN env var)"
  },
  "wake": {
    "enabled": true,
    "url": "https://your-wake-endpoint/wake",
    "method": "POST",
    "timeoutMs": 120000,
    "pollIntervalMs": 3000
  },
  "healthServer": {
    "port": 8080
  }
}
