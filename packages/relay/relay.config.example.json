{
  "discord": {
    "token": "your-discord-bot-token (or set DISCORD_TOKEN env var)",
    "allowedChannels": ["channel-id-1", "channel-id-2"]
  },
  "gateway": {
    "url": "https://your-sprite.sprites.dev",
    "authToken": "gateway-auth-token (or set GATEWAY_AUTH_TOKEN env var)",
    "healthPath": "/relay/health"
  },
  "wake": {
    "enabled": true,
    "url": "https://your-wake-endpoint/wake",
    "method": "POST",
    "timeoutMs": 120000,
    "pollIntervalMs": 3000
  },
  "healthServer": {
    "port": 8080
  }
}
